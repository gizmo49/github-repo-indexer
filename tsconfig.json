{
  "compilerOptions": {
    "target": "ES2020",                    
    "module": "commonjs",
    "experimentalDecorators": true,       
    "emitDecoratorMetadata": true,     
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
